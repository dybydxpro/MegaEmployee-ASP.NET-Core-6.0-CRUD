@model Employee
@{
    ViewData["Title"] = "Read";
}

<h1>Details of </h1>

<form method="post">
    <div class="row justify-content-center">
        <div  class="col-8">
            <div class="form-group">
              <label class="form-label mt-4" for="eName">Employee Name</label>
              <input type="text" asp-for="Name" class="form-control" id="eName" readonly>
            </div>
            <div class="form-group">
              <label class="form-label mt-4" for="eType">Employee Type</label>
              <input type="text" asp-for="Type" class="form-control" id="eType" readonly>
            </div>
            <p></p>
            <div class="form-group row justify-content-end" >
                <div class="col-3">
                    <button type="submit" class="btn btn-warning" id="btnBack" asp-controller="Employee" asp-action="Index">Back to list</button>
                </div>       
            </div>
        </div>
    </div>
</form>
